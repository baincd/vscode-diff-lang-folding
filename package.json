{
    "publisher": "baincd",
    "name": "diff-lang-improved",
    "displayName": "diff-lang-improved",
    "description": "Improvement on diff language",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:diff"
    ],
    "main": "./out/diff-improved-extension.js",
    "COMMENTS" : [
        "https://code.visualstudio.com/api/language-extensions/semantic-highlight-guide#semantic-token-scope-map",
        "https://code.visualstudio.com/api/references/contribution-points"
    ],
    "contributes": {
        "languages": [
          {
            "id": "diff",
            "extensions": [
              ".diff", ".patch", ".rej"
            ],
            "aliases": [
              "Diff (Improved)"
            ]
          }
        ],
        "semanticTokenScopes": [
            {
                "language": "diff",
                "scopes": {
                    "type": ["meta.diff.header.git"],
                    "function": ["meta.diff.range.unified"]
                }
            }
        ]
      },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.32.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "eslint": "^7.21.0",
        "typescript": "^4.2.2"
    }
}
